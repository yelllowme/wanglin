<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <com.wanglinkeji.wanglin.customerview.CircleImageView
            android:id="@+id/imageview_listViewItem_blogDetails_commentList_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/pdd"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_listviewItem_blogDetails_commentList_Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="XXX"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textview_listviewItem_blogDetails_commentList_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xx-xx-xx"
                    android:textSize="13sp"
                    android:textColor="#FFC2C2C2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_listviewItem_blogDetails_commentList_AtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:text="/@xx"
                    android:textSize="15sp"
                    android:textColor="#FF3B8EB0"/>

                <io.github.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/textview_listviewItem_blogDetails_commentList_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxxxxxxxxxxxxx"
                    android:textSize="15sp"
                    android:textColor="#FF595959"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#FFF0F0F0"/>

    </LinearLayout>

</LinearLayout>