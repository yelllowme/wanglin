<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:gravity="start">

            <ImageView
                android:id="@+id/imageview_ATUser_cancle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/left_cancle_white"
                android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ATUser_ATHouseEstate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textview_AtUser_AtHouseEstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="/@小区好友"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/imageview_ATUser_AtHouseEstate_point"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/point_white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ATUser_ATNeighbor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textview_AtUser_AtNeighbor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="//@邻居"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/imageview_ATUser_AtNeighbor_point"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/point_white"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:gravity="start">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">



    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_aitUser"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"/>

</LinearLayout>