<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="75dp">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp">

            <LinearLayout
                android:id="@+id/layout_listViewItem_newFriendDetails"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp">

                <com.wanglinkeji.wanglin.customerview.CircleImageView
                    android:id="@+id/imageview_newFriendItem_header"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/pdd"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/textview_newFriendItem_friendName"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="XXX"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textview_newFriendItem_friendMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="xxxxxxxxxxxxxxxxxxxx"
                        android:textSize="14sp"
                        android:textColor="#FF868686"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textview_newFriendItem_acceptFriend"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:background="@drawable/shape_rectangle_white_blue84border_allcorner"
                    android:text="接受"
                    android:textSize="12sp"
                    android:textColor="#FF417491"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textview_newFriendItem_refuse"
                android:layout_width="60dp"
                android:layout_height="75dp"
                android:layout_toRightOf="@+id/layout_listViewItem_newFriendDetails"
                android:background="#FFF26672"
                android:gravity="center"
                android:text="拒绝"
                android:textColor="@color/white"/>

        </RelativeLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:background="#FFEAEAEA"/>

    </LinearLayout>

</RelativeLayout>