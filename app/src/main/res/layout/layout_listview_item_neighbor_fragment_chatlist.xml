<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.wanglinkeji.wanglin.customerview.CircleImageView
            android:id="@+id/imageview_listviewItem_neighborFragment_chatListItem_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/pdd"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/textview_listviewItem_neighborFragment_chatListItem_friendName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="xxx"
                android:textSize="18sp"
                android:textColor="#FF686868"/>

            <TextView
                android:id="@+id/textview_listviewItem_neighborFragment_chatListItem_lastTalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="xxxxxxxxxxxxxxxxxxxxxxxxx"
                android:textSize="14sp"
                android:textColor="#FF808080"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textview_listviewItem_neighborFragment_chatListItem_numOfNotReadMessage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_circle_red_f67"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>